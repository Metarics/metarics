---
import Layout from "../layouts/default.astro";

const title = "Sign in";
const description = "Sign in";
---

<Layout content={{ title, description }}>
    <div class="flex flex-col items-center justify-center">
        <h1 class="text-3xl font-bold mb-4">Register</h1>
        <p class="mb-4">Already have an account? <a href="/signin" class="text-blue-500">Sign in</a></p>
        <form action="/api/auth/register" method="post" class="text-center">
          <label for="name" class="block font-semibold mb-2">Name</label>
          <input type="text" name="name" id="name" class="border rounded-md px-2 py-1 my-2" />
          <label for="email" class="block font-semibold mb-2">Email</label>
          <input type="email" name="email" id="email" class="border rounded-md px-2 py-1 my-2" />
          <label for="password" class="block font-semibold mb-2">Password</label>
          <input type="password" name="password" id="password" class="border rounded-md px-2 py-1 my-2" />
          <div class="mt-2">
            <button type="submit" class="bg-blue-500 text-white px-4 py-2 rounded-md hover:bg-blue-600">Register</button>
          </div>
        </form>
      </div>        
</Layout>
